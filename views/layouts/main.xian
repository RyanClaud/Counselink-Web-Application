<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} | CounseLink</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            /* MinSU Official Colors */
            --minsu-green: #2d5016;
            --minsu-green-light: #4a7c2c;
            --minsu-blue: #1e3a8a;
            --minsu-blue-light: #3b82f6;
            
            --bs-primary: #2d5016;
            --bs-primary-rgb: 45, 80, 22;
            --bs-secondary: #1e3a8a;
            --bs-success: #10B981;
            --bs-success-rgb: 16, 185, 129;
            --bs-warning: #FACC15;
            --bs-warning-rgb: 250, 204, 21;
            --counselink-bg: #e0e5ec;
            --counselink-text: #555;
            --counselink-muted: #6c757d;
            --neumorphic-shadow-dark: #a3b1c6;
            --neumorphic-shadow-light: #ffffff;
            --neumorphic-shadow-hover-dark: 7px 7px 14px var(--neumorphic-shadow-dark);
            --neumorphic-shadow-hover-light: -7px -7px 14px var(--neumorphic-shadow-light);
        }

        [data-bs-theme="dark"] {
            --bs-primary: #4a7c2c;
            --bs-primary-rgb: 74, 124, 44;
            --bs-body-bg: #2c3344;
            --bs-body-color: #d1d5db;
            --counselink-bg: #2c3344;
            --counselink-text: #d1d5db;
            --counselink-muted: #9ca3af;
            --neumorphic-shadow-dark: #242a38;
            --neumorphic-shadow-light: #343c50;
            --neumorphic-shadow-hover-dark: 7px 7px 14px var(--neumorphic-shadow-dark);
            --neumorphic-shadow-hover-light: -7px -7px 14px var(--neumorphic-shadow-light);
        }

        [data-bs-theme="dark"] .bg-white {
            background-color: var(--counselink-bg) !important;
        }
        [data-bs-theme="dark"] .card {
            background-color: var(--counselink-bg);
        }
        [data-bs-theme="dark"] .text-dark {
            color: #F9FAFB !important;
        }
        [data-bs-theme="dark"] .sidebar {
            background-color: #2c3344 !important;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--counselink-bg);
            color: var(--counselink-text);
        }
        .card {
            background: var(--counselink-bg);
            border-radius: 20px;
            border: none;
            box-shadow: 9px 9px 16px var(--neumorphic-shadow-dark), -9px -9px 16px var(--neumorphic-shadow-light) !important;
        }
        .btn {
            border-radius: 0.5rem; /* 8px */
        }
        .btn-primary {
            --bs-btn-bg: var(--bs-primary);
            --bs-btn-border-color: var(--bs-primary);
            --bs-btn-hover-bg: var(--minsu-green-light);
            --bs-btn-hover-border-color: var(--minsu-green-light);
            background: linear-gradient(135deg, var(--minsu-green) 0%, var(--minsu-blue) 100%);
            border: none;
            color: white;
        }
        .btn-primary {
            border: none;
            border-radius: 10px;
            box-shadow: 5px 5px 10px var(--neumorphic-shadow-dark), -5px -5px 10px var(--neumorphic-shadow-light);
            transition: all 0.2s ease-in-out;
        }
        .btn-primary:hover { box-shadow: 7px 7px 14px var(--neumorphic-shadow-dark), -7px -7px 14px var(--neumorphic-shadow-light); }
        .btn-primary:active, .btn-primary:focus { box-shadow: inset 5px 5px 10px var(--neumorphic-shadow-dark), inset -5px -5px 10px var(--neumorphic-shadow-light) !important; }
        .sidebar {
            width: 260px;
            min-height: 100vh;
            transition: margin-left .3s;
            background-color: var(--counselink-bg);
            box-shadow: 9px 9px 16px var(--neumorphic-shadow-dark), -9px -9px 16px var(--neumorphic-shadow-light);
        }
        .sidebar .nav-link {
            color: var(--counselink-muted);
            font-weight: 500;
            padding: 0.65rem 1.5rem;
            border-radius: 0.5rem;
            transition: all 0.2s ease;
            margin-bottom: 0.25rem;
        }
        .sidebar .nav-heading {
            font-size: 0.75rem;
            font-weight: 600;
            color: var(--counselink-muted);
            text-transform: uppercase;
            padding: 1rem 1.5rem 0.5rem;
        }
        .sidebar .nav-link:hover {
            color: var(--bs-primary);
            transform: translateY(-2px);
        }
        .sidebar .nav-link.active {
            color: var(--bs-primary);
            background-color: var(--counselink-bg);
            box-shadow: inset 4px 4px 8px var(--neumorphic-shadow-dark), inset -4px -4px 8px var(--neumorphic-shadow-light);
        }
        .sidebar .nav-link i {
            width: 20px;
            margin-right: 0.75rem;
        }
        /* Mobile Offcanvas Sidebar */
        @media (max-width: 991.98px) {
            .sidebar {
                position: fixed;
                top: 0;
                bottom: 0;
                left: -260px; /* Hidden by default */
                z-index: 1045; /* Above backdrop */
                transition: left 0.3s ease-in-out;
            }
            .sidebar.is-open {
                left: 0; /* Slide in */
            }
        }
        .main-content {
            /* Adjusted for responsiveness */
            width: 100%; /* Default full width on small screens */
            margin-left: 0; /* No margin on small screens */
            flex-grow: 1; /* Allow it to grow */
            transition: margin-left .3s;
            padding-top: 70px; /* Add padding to push content below the sticky header */
            padding-bottom: 80px; /* Add padding to prevent overlap with bottom nav */
        }
        .top-nav {
            z-index: 1020; /* Above sidebar */
            box-shadow: 9px 9px 16px var(--neumorphic-shadow-dark), -9px -9px 16px var(--neumorphic-shadow-light) !important;
        }
        .notification-bell {
            display: inline-block;
            padding: 0.5rem 0.75rem;
            border-radius: 50%;
            transition: background-color 0.2s ease;
        }
        .notification-bell:hover {
            background-color: rgba(var(--bs-primary-rgb), 0.1);
        }
        #theme-toggle-btn {
            cursor: pointer;
        }

        /* Bottom Navigation for Mobile */
        .bottom-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: var(--counselink-bg);
            box-shadow: 0 -5px 15px rgba(0, 0, 0, 0.1);
            z-index: 1030;
            padding: 0.5rem 0;
        }
        .bottom-nav .nav-link {
            color: var(--counselink-muted);
            text-align: center;
            font-size: 0.75rem;
            padding: 0.5rem 0.25rem;
        }
        .bottom-nav .nav-link i {
            display: block;
            font-size: 1.25rem;
            margin-bottom: 0.25rem;
        }
        .bottom-nav .nav-link.active {
            color: var(--bs-primary);
            background-color: transparent;
            box-shadow: none;
        }
    </style>
    <link rel="stylesheet" href="/fontawesome/css/all.min.css">
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="sidebar p-3 d-lg-flex flex-column">
            <div class="mb-4 p-2">
                <a class="navbar-brand d-flex align-items-center" href="/dashboard">
                    <img src="/logo/counselink_logo.png" alt="CounseLink Logo" height="40" class="me-2">
                    <span class="fw-bold fs-5">CounseLink</span>
                </a>
            </div>
            <nav class="nav flex-column flex-grow-1">
                {{!-- Student Menu --}}
                {{#if (eq user.role 'student')}}
                    <div class="nav-heading">Menu</div>
                    <a class="nav-link {{#if (eq title 'Dashboard')}}active{{/if}}" href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
                    <div class="nav-heading">Account</div>
                    <a class="nav-link {{#if (eq title 'Account Settings')}}active{{/if}}" href="/settings"><i class="fas fa-cog"></i> Settings</a>
                {{/if}}

                {{!-- Counselor Menu --}}
                {{#if (eq user.role 'counselor')}}
                    <div class="nav-heading">Menu</div>
                    <a class="nav-link {{#if (eq title 'Counselor Dashboard')}}active{{/if}}" href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
                    <a class="nav-link {{#if (eq title 'My Feedback')}}active{{/if}}" href="/feedback/my-feedback"><i class="fas fa-star"></i> My Feedback</a>
                    <div class="nav-heading">Account</div>
                    <a class="nav-link {{#if (eq title 'Account Settings')}}active{{/if}}" href="/settings"><i class="fas fa-cog"></i> Settings</a>
                {{/if}}
            </nav>

            <!-- Sidebar Footer with User Profile -->
            <div class="sidebar-footer">
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle p-2" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://i.pravatar.cc/40?u={{user.user_id}}" alt="" width="32" height="32" class="rounded-circle me-2">
                        <div class="d-flex flex-column">
                            <strong class="text-dark" style="line-height: 1;">{{user.profile_info.firstName}}</strong>
                            <small class="text-muted">{{user.role}}</small>
                        </div>
                    </a>
                    <ul class="dropdown-menu text-small shadow border-0">
                        <li><a class="dropdown-item" href="/settings">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/logout">Sign out</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Bottom Navigation Bar (Mobile Only) -->
        <div class="bottom-nav d-lg-none">
            <div class="container">
                <div class="row justify-content-around">
                    {{!-- Student Menu --}}
                    {{#if (eq user.role 'student')}}
                        <a class="nav-link col {{#if (eq title 'Dashboard')}}active{{/if}}" href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
                        <a class="nav-link col {{#if (eq title 'Account Settings')}}active{{/if}}" href="/settings"><i class="fas fa-cog"></i> Settings</a>
                    {{/if}}

                    {{!-- Counselor Menu --}}
                    {{#if (eq user.role 'counselor')}}
                        <a class="nav-link col {{#if (eq title 'Counselor Dashboard')}}active{{/if}}" href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
                        <a class="nav-link col {{#if (eq title 'My Feedback')}}active{{/if}}" href="/feedback/my-feedback"><i class="fas fa-star"></i> Feedback</a>
                        <a class="nav-link col {{#if (eq title 'Account Settings')}}active{{/if}}" href="/settings"><i class="fas fa-cog"></i> Settings</a>
                    {{/if}}
                </div>
            </div>
        </div>


        <!-- Main Content -->
        <div class="main-content ms-auto">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top top-nav">
                <div class="container-fluid">
                    <!-- Mobile sidebar toggle -->
                    <button class="btn btn-primary d-lg-none" type="button" id="sidebar-toggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="ms-auto d-flex align-items-center">
                        <!-- Notifications Dropdown -->
                        <div class="dropdown me-3">
                            <a class="notification-bell position-relative" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Notifications">
                                <img src="/logo/notification_icon.png" alt="Notifications" height="28">
                                {{#if notifications.length}}
                                    <span class="badge rounded-pill bg-danger position-absolute top-0 start-100 translate-middle" style="font-size: 0.6em;">{{notifications.length}}</span>
                                {{/if}}
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0" style="min-width: 320px;">
                                <li class="px-3 py-2 fw-bold">Notifications</li>
                                <li><hr class="dropdown-divider"></li>
                                {{#if notifications.length}}
                                    {{#each notifications}}
                                    <li><a class="dropdown-item text-wrap" href="#">{{this.message}}</a></li>
                                    {{/each}}
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form action="/notifications/mark-read" method="POST" class="px-3">
                                            <button type="submit" class="btn btn-sm btn-link p-0">Mark all as read</button>
                                        </form>
                                    </li>
                                {{else}}
                                    <li><p class="dropdown-item text-muted text-center small py-3">No new notifications</p></li>
                                {{/if}}
                            </ul>
                        </div>
                        <!-- User Dropdown -->
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="https://i.pravatar.cc/40?u={{user.user_id}}" alt="" width="32" height="32" class="rounded-circle me-2">
                                <strong class="text-dark">{{user.profile_info.firstName}}</strong>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end text-small shadow border-0">
                                <li><a class="dropdown-item" href="/settings">Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/logout">Sign out</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Toast Container for Floating Notifications -->
            <div class="toast-container position-fixed bottom-0 end-0 p-3" style="padding-bottom: 70px !important;">
                <!-- Toasts will be inserted here dynamically -->
            </div>

            <!-- Page Content -->
            <main class="p-4">
                {{#if success_msg}}<div class="alert alert-success">{{success_msg}}</div>{{/if}}
                {{#if error_msg}}<div class="alert alert-danger">{{error_msg}}</div>{{/if}}
                {{{body}}}
            </main>
        </div>
    </div>
    <div class="offcanvas-backdrop fade show d-lg-none" id="sidebar-backdrop" style="display: none;"></div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
        (function() {
            const htmlElement = document.documentElement;

            // Function to set the theme
            const setTheme = (theme) => {
                htmlElement.setAttribute('data-bs-theme', theme);
                localStorage.setItem('theme', theme);
                const themeToggle = document.getElementById('theme-toggle-switch');
                if (themeToggle) {
                    themeToggle.checked = theme === 'dark';
                }
            };

            // Apply the saved theme on page load
            const savedTheme = localStorage.getItem('theme') || 'light';
            setTheme(savedTheme);

            // Add event listener for the theme toggle if it exists on the current page
            const themeToggle = document.getElementById('theme-toggle-switch');
            if (themeToggle) {
                themeToggle.addEventListener('change', () => {
                    const newTheme = themeToggle.checked ? 'dark' : 'light';
                    setTheme(newTheme);
                });
            }

            // Socket.io logic for floating notifications
            const socket = io();
            const toastContainer = document.querySelector('.toast-container');

            // Join a room specific to this user
            socket.emit('join-room', 'user-{{user.user_id}}');

            // --- Single, consolidated listener for new notifications ---
            socket.on('new-notification', (data) => {
                // 1. Show the floating "toast" notification
                const toastEl = document.createElement('div');
                toastEl.classList.add('toast');
                toastEl.setAttribute('role', 'alert');
                toastEl.setAttribute('aria-live', 'assertive');
                toastEl.setAttribute('aria-atomic', 'true');
                toastEl.innerHTML = `
                    <div class="toast-header">
                        <i class="fas fa-bell me-2 text-primary"></i>
                        <strong class="me-auto">New Notification</strong>
                        <small>Just now</small>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">${data.message}</div>
                `;
                toastContainer.appendChild(toastEl);
                const toast = new bootstrap.Toast(toastEl);
                toast.show();

                // 2. Dynamically update the header notification bell
                const notificationBell = document.querySelector('.notification-bell');
                const dropdownMenu = document.querySelector('.notification-bell + .dropdown-menu');
                
                let badge = notificationBell.querySelector('.badge');
                if (badge) {
                    badge.textContent = parseInt(badge.textContent) + 1;
                } else {
                    badge = document.createElement('span');
                    badge.className = 'badge rounded-pill bg-danger position-absolute top-0 start-100 translate-middle';
                    badge.style.fontSize = '0.6em';
                    badge.textContent = '1';
                    notificationBell.appendChild(badge);
                }

                if (dropdownMenu) {
                    const placeholder = dropdownMenu.querySelector('p.text-muted');
                    if (placeholder) {
                        placeholder.parentElement.remove();
                    }
                    const newNotificationItem = document.createElement('li');
                    newNotificationItem.innerHTML = `<a class="dropdown-item text-wrap" href="#">${data.message}</a>`;
                    const divider = dropdownMenu.querySelector('hr.dropdown-divider');
                    divider.insertAdjacentElement('afterend', newNotificationItem);
                }
            });

            // Sidebar Toggle Logic
            const sidebarToggle = document.getElementById('sidebar-toggle');
            const sidebar = document.querySelector('.sidebar');
            const backdrop = document.getElementById('sidebar-backdrop');

            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', () => {
                    sidebar.classList.remove('d-none'); // Make it visible for transition
                    sidebar.classList.toggle('is-open');
                    backdrop.style.display = sidebar.classList.contains('is-open') ? 'block' : 'none';
                });
                backdrop.addEventListener('click', () => {
                    sidebar.classList.remove('is-open');
                    // No need to add d-none, the 'left: -260px' style will hide it
                    backdrop.style.display = 'none';
                });
            }

            // Adjust main-content margin based on sidebar visibility
            const adjustMainContentMargin = () => {
                if (window.innerWidth >= 992) { // lg breakpoint
                    document.querySelector('.main-content').style.marginLeft = '260px';
                } else {
                    document.querySelector('.main-content').style.marginLeft = '0';
                }
            };

            // Run on load and resize
            adjustMainContentMargin();
            window.addEventListener('resize', adjustMainContentMargin);
        })();
    </script>
</body>
</html>